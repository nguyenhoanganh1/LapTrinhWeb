@model Model.EL.Customer

@{ ViewBag.Title = "Login";
   Layout = "~/Views/Shared/_Layout.cshtml"; }



@using (Html.BeginForm("Login", "User", FormMethod.Post))
{

    // @Html.AntiForgeryToken()


    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                <i class="glyphicon glyphicon-user"></i>
                <b> ĐĂNG NHẬP</b>
            </h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label><i class="glyphicon glyphicon-user"></i> Email:</label>
                <input name="email" placeholder="Email?" class="form-control">
            </div>
            <div class="form-group">
                <label><i class="glyphicon glyphicon-lock"></i> Password:</label>
                <input name="password" placeholder="Password?" type="password" class="form-control">
            </div>
            <div class="form-group">
                <label class="checkbox-inline">
                    <input name="remember" value="true" type="checkbox">
                    <i class="glyphicon glyphicon-save"></i> Remember me?
                </label>
            </div>
        </div>
        <div class="panel-footer text-right">
            <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-ok"></i> Đăng nhập
            </button>
            <b class="pull-left text-danger"><i>@ViewBag.Fail</i></b>
        </div>
    </div>

}