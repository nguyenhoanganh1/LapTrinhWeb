@model Model.EL.Order
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Admin_Layout.cshtml";
}

<form action="/Admin/OrderA/Update" method="post">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <b>CHỈNH SỬA THÔNG TIN ĐƠN HÀNG</b>
            <i class="text-danger pull-right"></i>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="form-group col-sm-6">
                    <label>Order Id:</label>
                    <input value="@Model.Id" name="id" placeholder="Auto Number" readonly class="form-control" />
                </div>
                <div class="form-group col-sm-6">
                    <label>Order Date:</label>
                    <input value="@Model.OrderDate" name="orderdate" readonly placeholder="Order Date?" class="form-control" readonly />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-6">
                    <label>Customer:</label>
                    <input value="@Model.CustomerId" name="customerid" placeholder="Customer Id?" readonly class="form-control" />
                </div>
                <div class="form-group col-sm-6">
                    <label>Shipping Address:</label>
                    <input value="@Model.Address" name="address" placeholder="Shipping Address?" readonly class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-6">
                    <label>Total Amount:</label>
                    <input value="@Model.Amount" name="amount" placeholder="Total Amount?" readonly class="form-control" />
                </div>
                <div class="form-group col-sm-6">
                    <label>Order Status:</label>
                    <select id="status" name="status" class="form-control">
                        @if (Model.Status == 0)
                        {
                            <option value="@Model.Status">Mới</option>
                            <option value="1">Đang liên lạc</option>
                        }
                        else if (Model.Status == 1)
                        {
                            <option value="Model.Status">Đang liên lạc</option>
                            <option value="2">Đã xác nhận</option>

                        }
                        else if (Model.Status == 2)
                        {
                            <option value="Model.Status">Đã xác nhận</option>
                            <option value="3">Đang gửi</option>
                        }
                        else if (Model.Status == 3)
                        {
                            <option value="Model.Status">Đang gửi</option>
                            <option value="-1">Hủy đơn hàng</option>
                            <option value="4">Hoàn thành</option>
                        }
                        else if (Model.Status == 4)
                        {
                            <option value="@Model.Status">Hoàn thành</option>
                        }
                        else
                        {
                            <option value="0">Mới</option>
                            <option value="1">Đang xác nhận</option>
                            <option value="2">Đang gửi</option>
                            <option value="3">Đã thanh toán</option>

                        }

                    </select>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-12">
                    <label>Notes:</label>
                    <textarea value="@Model.Notes" rows="3" name="notes" placeholder="Order Notes?" class="form-control" readonly></textarea>
                </div>
            </div>
        </div>
        <div class="panel-footer text-right">
            <button type="submit" class="btn btn-success">
                <i class="glyphicon glyphicon-saved"></i> Cập nhật
            </button>

        </div>
    </div>
</form>
